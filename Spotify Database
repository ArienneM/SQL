-- Selecting all information on Spotify Database
SELECT *
FROM BIT_DB.Spotifydata;

--Checking the average danceability of all tracks
SELECT  AVG(danceability) AS Average_Danceability,
artist_name,
track_name
FROM BIT_DB.Spotifydata
GROUP BY danceability 
ORDER BY danceability desc
;

--Checking top 10 most popular songs with their artists
SELECT popularity ,
track_name,
artist_name
FROM BIT_DB.Spotifydata
ORDER BY popularity desc
LIMIT 10;


-- What artist released the longest song?
SELECT MAX(duration_ms)
,artist_name
FROM BIT_DB.Spotifydata;

--Average danceability for top ten songs
SELECT AVG(danceability),
track_name
FROM BIT_DB.Spotifydata
WHERE popularity>=90
GROUP BY danceability
ORDER BY popularity desc
LIMIT 10;

--Average danceability, popularity

SELECT track_name,artist_name,
AVG(danceability),
AVG(popularity)
FROM BIT_DB.Spotifydata
GROUP BY danceability
;

--Average Popularity of Olivia Rodrigo
SELECT AVG(popularity),artist_name
FROM BIT_DB.Spotifydata
ORDER BY popularity desc;
